<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AllLayoutsApp.Views.CustomMasterDetailPage">
    <MasterDetailPage.Master>
            <ContentPage Title="Menu">
                   <StackLayout BackgroundColor="Silver" Padding="20">
                      <Button Text="Stack Layout" 
                              TextColor="White"
                              BackgroundColor="Red" 
                              Command="{Binding OnNavigateCommand}" 
                              CommandParameter="NavigationPage/StackLayoutPage"/>
                      <Button Text="Absolute Layout"  
                              TextColor="White"
                              BackgroundColor="Black" 
                              Command="{Binding OnNavigateCommand}" 
                              CommandParameter="NavigationPage/AbsoluteLayoutPage"/>
                      <Button Text="Relative Layout"  
                              TextColor="White"
                              BackgroundColor="Black" 
                              Command="{Binding OnNavigateCommand}" 
                              CommandParameter="NavigationPage/RelativeLayoutPage"/>
                  </StackLayout>
              </ContentPage>
     </MasterDetailPage.Master>
</MasterDetailPage>
